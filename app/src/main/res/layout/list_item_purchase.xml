<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/purchase_item_container"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginBottom="@dimen/paddingOrMar_S"
        app:layout_constraintBottom_toBottomOf="@id/list_item_date_purchase"
        app:layout_constraintEnd_toStartOf="@id/client_item_phone_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingOrMar_L"
        android:layout_marginTop="@dimen/paddingOrMar_S"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="client name" />

    <TextView
        android:id="@+id/list_item_product_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingOrMar_L"
        android:layout_marginTop="@dimen/paddingOrMar_S"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_client_name"
        tools:text="Product purchased" />

    <TextView
        android:id="@+id/list_item_date_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingOrMar_L"
        android:layout_marginTop="@dimen/paddingOrMar_S"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_product_purchased"
        tools:text="gg/mm/yyyy" />

    <TextView
        android:id="@+id/list_item_quantity_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingOrMar_L"
        android:layout_marginTop="@dimen/paddingOrMar_S"
        app:layout_constraintStart_toEndOf="@id/list_item_product_purchased"
        app:layout_constraintEnd_toStartOf="@id/client_item_phone_button"
        app:layout_constraintTop_toBottomOf="@+id/list_item_client_name"
        tools:text="XX" />

</android.support.constraint.ConstraintLayout>